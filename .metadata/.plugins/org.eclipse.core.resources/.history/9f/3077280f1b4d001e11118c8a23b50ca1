	<script>
		function searchBook() {
			let bookname = document.frmSearchBook.bookname.value;

			return bookname ? frmSearchBook.submit() : alert("도서명을 입력하세요.")

			if (!bookname) {
				return alert("도서명을 입력하세요.")
			}
		
		
		
			alert("Yalloo!");
		}
	</script>
